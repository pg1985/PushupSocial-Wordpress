     $.get(base_url + wp_url,
         function(data){
             if (data.length == 0) {

                 var email = '<?php echo get_option('admin_email')?>';

                 var site_url = '<?php echo get_option('siteurl') ?>';
                 var site_name = '<?php echo get_option('blogname') ?>';
                 var defaultQuery = "https://registration-dev.pushup.com/?width=900&height=550&TB_iframe=true";
