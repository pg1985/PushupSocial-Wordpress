                 alert(thirdPartyString);


                 $('#modal_link_create').attr("href", thirdPartyString).show();

             }
             else {
                 setCommunityId(data['network_id']);
                 $('#modal_link_manage').show();
             }
         });
 });

 function setCommunityId(data) {
     $('#community_id').val(data + "");
 }

 </script>
