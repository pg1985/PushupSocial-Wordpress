 <script>
 $(document).ready(function($){

     $('#modal_link_create').hide();
     $('#modal_link_manage').hide();
     var base_url = 'https://api-staging.pushup.com/network/communities?';
     //var wp_url = 'network_id=<?php echo $options[PUSHUP_OPTION_COMMUNITY] ?>';
